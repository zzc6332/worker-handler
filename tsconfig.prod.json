{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "lib": [
      "ESNext",
      "WebWorker",
      "WebWorker.ImportScripts",
      "Webworker.Iterable"
    ],
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "ESNext",
    "allowJs": true,
    "baseUrl": ".",
    "outDir": "./dist/release",
    "declaration": true,
    "declarationDir": "./dist/release"
  },
  "include": ["src"],
  "exclude": ["src/demo"]
}
